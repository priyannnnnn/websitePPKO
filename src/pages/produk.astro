        <p class="text-blue-600 font-bold text-base mb-4">Mulai dari ${variants[0].price}</p>
        <a 
          href="/produk/${variants[0].id}" 
          class="inline-block w-full text-center rounded-full px-6 py-3 bg-blue-600 text-white font-medium hover:bg-blue-700 transition-colors"
        >
          Lihat Detail
        </a>
      </div>
    `;
    
    return card;
  }

  function createVariantCard(variant, category) {
    const card = document.createElement('div');
    card.className = 'product-card bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg hover:bg-gray-50 transition-all';
    card.dataset.category = category;
    
    card.innerHTML = `
      <div class="relative h-56 overflow-hidden bg-gray-100">
        <img 
          src="${variant.image}" 
          alt="${variant.name}" 
          class="w-full h-full object-contain"
        />
        ${variant.badge ? `
          <div class="absolute top-3 right-3 ${variant.badge.color} text-white px-3 py-1 rounded-full text-xs font-bold">
            ${variant.badge.text}
          </div>
        ` : ''}
      </div>
