        <h3 class="text-lg font-semibold text-gray-800 mb-1">${variant.name}</h3>
        <p class="text-sm text-gray-500 mb-3">${variant.subtitle}</p>
        <p class="text-blue-600 font-bold text-base mb-4">${variant.price}</p>
        <a 
          href="/produk/${variant.id}" 
          class="inline-block w-full text-center rounded-full px-6 py-3 bg-blue-600 text-white font-medium hover:bg-blue-700 transition-colors"
        >
          Lihat Detail
        </a>
      </div>
    `;
    
    return card;
  }

  function startCarousel(carouselId) {
    const carousel = document.querySelector(`[data-carousel="${carouselId}"]`);
    if (!carousel) return;

    const images = carousel.querySelectorAll('.carousel-image');
    const dots = document.querySelectorAll(`.carousel-dot[data-carousel="${carouselId}"]`);
    
    // Clear existing interval
    if (carouselIntervals[carouselId]) {
      clearInterval(carouselIntervals[carouselId]);
    }

    carouselIntervals[carouselId] = setInterval(() => {
      const currentIndex = carouselStates[carouselId];
      const nextIndex = (currentIndex + 1) % images.length;
      
      // Update images
      images[currentIndex].classList.remove('opacity-100');
      images[currentIndex].classList.add('opacity-0');
      images[nextIndex].classList.remove('opacity-0');
      images[nextIndex].classList.add('opacity-100');
      
      // Update dots
      dots[currentIndex].classList.remove('active');
      dots[nextIndex].classList.add('active');
      
      carouselStates[carouselId] = nextIndex;
    }, 3500); // 3.5 seconds
  }

  function stopAllCarousels() {
    Object.keys(carouselIntervals).forEach(carouselId => {
      if (carouselIntervals[carouselId]) {
        clearInterval(carouselIntervals[carouselId]);
        delete carouselIntervals[carouselId];
      }
    });
  }

  function renderProducts(category) {
    const grid = document.getElementById('products-grid');
    if (!grid) return;

    // Stop all existing carousels
    stopAllCarousels();
    
    // Clear grid
    grid.innerHTML = '';

    if (category === 'all') {
      // Show one carousel card per category
      Object.keys(productsData).forEach(cat => {
        const card = createCarouselCard(cat, productsData[cat]);
        grid.appendChild(card);
      });

      // Start all carousels
      Object.keys(productsData).forEach(cat => {
        const carouselId = `carousel-${cat}`;
        startCarousel(carouselId);
      });

      // Add click handlers for carousel dots
      document.querySelectorAll('.carousel-dot').forEach(dot => {
        dot.addEventListener('click', (e) => {
          const carouselId = e.target.dataset.carousel;
          const targetIndex = parseInt(e.target.dataset.index);
          const carousel = document.querySelector(`[data-carousel="${carouselId}"]`);
          const images = carousel.querySelectorAll('.carousel-image');
          const dots = document.querySelectorAll(`.carousel-dot[data-carousel="${carouselId}"]`);
          
          // Update images
          images.forEach((img, idx) => {
            if (idx === targetIndex) {
              img.classList.remove('opacity-0');
              img.classList.add('opacity-100');
            } else {
              img.classList.remove('opacity-100');
              img.classList.add('opacity-0');
            }
          });
          
          // Update dots
          dots.forEach((d, idx) => {
            if (idx === targetIndex) {
              d.classList.add('active');
            } else {
              d.classList.remove('active');
            }
          });
          
          carouselStates[carouselId] = targetIndex;
          
          // Restart carousel
          startCarousel(carouselId);
        });
      });
    } else {
      // Show all variants for selected category
      const categoryData = productsData[category];
      if (categoryData) {
        categoryData.variants.forEach(variant => {
          const card = createVariantCard(variant, category);
          grid.appendChild(card);
        });
      }
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    
    // Render initial view (all products)
    renderProducts('all');

    // Add filter button handlers
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');

        // Update active button styling
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'bg-blue-600', 'text-white', 'shadow-md');
          btn.classList.add('border', 'border-blue-600', 'text-blue-600');
        });
        button.classList.add('active', 'bg-blue-600', 'text-white', 'shadow-md');
        button.classList.remove('border', 'border-blue-600', 'text-blue-600');

        // Render products for selected category
        renderProducts(category);
      });
    });
  });

  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      stopAllCarousels();
    } else {
      const activeCategory = document.querySelector('.filter-btn.active')?.getAttribute('data-category');
      if (activeCategory === 'all') {
        Object.keys(productsData).forEach(cat => {
          startCarousel(`carousel-${cat}`);
        });
      }
    }
  });
</script>
