  const carouselStates = {};
  const carouselIntervals = {};

  function createCarouselCard(category, data) {
    const variants = data.variants;
    const carouselId = `carousel-${category}`;
    
    // Initialize carousel state
    carouselStates[carouselId] = 0;

    const card = document.createElement('div');
    card.className = 'product-card bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg hover:bg-gray-50 transition-all';
    card.dataset.category = category;
    
    card.innerHTML = `
      <div class="relative h-56 overflow-hidden bg-gray-100">
        <div class="carousel-images relative w-full h-full" data-carousel="${carouselId}">
          ${variants.map((variant, index) => `
            <img 
              src="${variant.image}" 
              alt="${variant.name}" 
              class="carousel-image absolute inset-0 w-full h-full object-contain transition-opacity duration-500 ${index === 0 ? 'opacity-100' : 'opacity-0'}"
              data-index="${index}"
            />
          `).join('')}
        </div>
        ${variants[0].badge ? `
          <div class="absolute top-3 right-3 ${variants[0].badge.color} text-white px-3 py-1 rounded-full text-xs font-bold">
            ${variants[0].badge.text}
          </div>
        ` : ''}
        <div class="absolute bottom-3 left-0 right-0 flex justify-center gap-2">
          ${variants.map((_, index) => `
            <div class="carousel-dot ${index === 0 ? 'active' : ''}" data-carousel="${carouselId}" data-index="${index}"></div>
          `).join('')}
        </div>
