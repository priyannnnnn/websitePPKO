---
import MainLayout from '../../layouts/MainLayout.astro';

const metadata = {
  title: 'Blog',
};

const blogPosts = [
  {
    id: 1,
    title: 'Tantangan Peternak Susu di Desa Purwobinangun',
    excerpt: 'Meskipun produksi susu mencapai 71.5 liter per hari, peternak masih menjual mentah dengan harga rendah. Pelajari bagaimana factory sharing menjadi solusi.',
    date: '15 Oktober 2024',
    author: 'Tim PPKO',
    category: 'Pertanian',
    image: '/placeholder.svg?height=300&width=500'
  },
  {
    id: 2,
    title: 'Pengenalan Factory Sharing Model Baru di Purwobinangun',
    excerpt: 'Factory sharing adalah konsep revolusioner dimana peternak berbagi fasilitas produksi dengan standar higienis internasional untuk meningkatkan nilai produk.',
    date: '10 Oktober 2024',
    author: 'Tim PPKO',
    category: 'Inovasi',
    image: '/placeholder.svg?height=300&width=500'
  },
  {
    id: 3,
    title: 'Strategi Digital Marketing untuk UMKM Susu Lokal',
    excerpt: 'Bagaimana penggunaan media sosial, marketplace, dan strategi branding yang tepat dapat membantu produk lokal mencapai pasar yang lebih luas.',
    date: '05 Oktober 2024',
    author: 'Tim PPKO',
    category: 'Pemasaran Digital',
    image: '/placeholder.svg?height=300&width=500'
  },
  {
    id: 4,
    title: 'Sertifikasi PIRT dan Halal untuk Produk Olahan Susu',
    excerpt: 'Panduan lengkap tentang proses sertifikasi PIRT dan Halal yang diperlukan untuk memasarkan produk olahan susu dengan percaya diri.',
    date: '01 Oktober 2024',
    author: 'Tim PPKO',
    category: 'Legalitas',
    image: '/placeholder.svg?height=300&width=500'
  },
  {
    id: 5,
    title: 'Pemberdayaan Ekonomi Perempuan Melalui Kelompok Tani',
    excerpt: 'Kisah inspiratif tentang bagaimana perempuan tani di Purwobinangun membangun kemandirian ekonomi melalui kolaborasi dan inovasi berkelanjutan.',
    date: '28 September 2024',
    author: 'Tim PPKO',
    category: 'Pemberdayaan',
    image: '/placeholder.svg?height=300&width=500'
  },
  {
    id: 6,
    title: 'Teknologi Blockchain dalam Supply Chain Susu Lokal',
    excerpt: 'Eksplorasi bagaimana teknologi blockchain dapat meningkatkan transparansi dan kepercayaan konsumen terhadap produk susu lokal berkualitas tinggi.',
    date: '25 September 2024',
    author: 'Tim PPKO',
    category: 'Teknologi',
    image: '/placeholder.svg?height=300&width=500'
  }
];
---

<MainLayout title={metadata.title}>
  <!-- Hero Section -->
  <div class="relative w-full h-[40rem] overflow-hidden">
    <img 
      src="/placeholder.svg?height=640&width=1920"
      alt="Blog"
      class="w-full h-full object-cover"
      style="filter: brightness(50%);"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-black/70 flex flex-col items-start justify-end p-6 sm:p-10 lg:p-16">
      <h1 class="text-white text-4xl sm:text-5xl md:text-6xl font-bold text-left mb-6 animate-fadeIn">Blog</h1>
      <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-left max-w-4xl text-gray-100 animate-fadeIn" style="animation-delay: 0.2s;">
        Artikel terbaru dan insights mendalam tentang program PPK Ormawa, inovasi pengolahan susu, dan pemberdayaan ekonomi perempuan tani di Desa Purwobinangun.
      </p>
    </div>
  </div>

  <!-- Blog Posts Grid -->
  <div class="container mx-auto px-4 py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogPosts.map((post) => (
        <article class="flex flex-col bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow h-full">
          <div class="relative overflow-hidden h-48">
            <img src={post.image || "/placeholder.svg"} alt={post.title} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="p-6 flex-1 flex flex-col">
            <div class="flex items-center justify-between mb-3">
              <span class="inline-block bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-semibold">
                {post.category}
              </span>
              <span class="text-xs text-gray-500">{post.date}</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 line-clamp-2">
              {post.title}
            </h3>
            <p class="text-gray-700 mb-4 flex-grow line-clamp-3">
              {post.excerpt}
            </p>
            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
              <span class="text-sm text-gray-600">Oleh {post.author}</span>
              <a href={`/blog/${post.id}`} class="text-blue-600 hover:text-blue-800 font-semibold text-sm">
                Selengkapnya â†’
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeIn {
      animation: fadeIn 0.8s ease-out forwards;
    }
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</MainLayout>
