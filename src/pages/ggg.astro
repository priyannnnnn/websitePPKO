            <div class="bg-blue-50 rounded-lg p-4 border border-blue-100">
              <div class="text-3xl font-bold text-blue-700 mb-1">7+</div>
              <div class="text-sm text-gray-600">Jenis Produk</div>
            </div>
          </div>

          <Button 
            text="Pelajari Lebih Lanjut" 
            href="/luaran" 
            variant="primary"
            class="bg-blue-700 hover:bg-blue-800 text-white"
          />
