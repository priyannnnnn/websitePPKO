---
import MainLayout from '../layouts/MainLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import { articles } from './informasi/[slug].astro';
---

<MainLayout title="Informasi">
  <!-- Hero Section -->
  <section class="bg-blue-700 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Informasi & Artikel</h1>
        <p class="text-xl text-blue-100 mb-8">
          Berita terbaru, artikel, dan informasi seputar program PPKO Desa Purwobinangun
        </p>
      </div>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="py-8 bg-blue-50 border-b border-blue-100">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <h2 class="text-xl font-semibold text-blue-800">Filter Artikel</h2>
        </div>
        <div class="flex flex-wrap gap-3">
          <select class="px-4 py-2 rounded-md border border-blue-200 bg-white text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">Semua Kategori</option>
            <option value="inspirasi-desa">Inspirasi Desa</option>
            <option value="bisnis-susu">Bisnis Susu</option>
            <option value="teknologi-produksi">Teknologi Produksi</option>
            <option value="digitalisasi">Digitalisasi</option>
          </select>
          <select class="px-4 py-2 rounded-md border border-blue-200 bg-white text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">Semua Waktu</option>
            <option value="minggu-ini">Minggu Ini</option>
            <option value="bulan-ini">Bulan Ini</option>
            <option value="tahun-ini">Tahun Ini</option>
          </select>
          <div class="relative">
            <input 
              type="text" 
              placeholder="Cari artikel..." 
              class="pl-10 pr-4 py-2 rounded-md border border-blue-200 bg-white text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
            />
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Article -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="bg-gradient-to-r from-blue-50 to-green-50 rounded-xl overflow-hidden shadow-lg">
        <div class="flex flex-col md:flex-row">
          <div class="md:w-1/2">
            <img 
              src="/placeholder.svg?height=600&width=800" 
              alt="Artikel Unggulan" 
              class="w-full h-full object-cover"
            />
          </div>
          <div class="md:w-1/2 p-8 flex flex-col justify-center">
            <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mb-4">Artikel Unggulan</span>
            <h2 class="text-3xl font-bold text-blue-800 mb-4">Transformasi Digital Desa Purwobinangun Melalui Program PPKO</h2>
            <p class="text-gray-600 mb-6">
              Bagaimana program PPKO membantu Desa Purwobinangun bertransformasi menjadi sentra produksi susu modern dengan pendekatan digital dan standarisasi produksi.
            </p>
            <div class="flex items-center mb-6">
              <img 
                src="/placeholder.svg?height=100&width=100" 
                alt="Penulis" 
                class="h-10 w-10 rounded-full mr-3"
              />
              <div>
                <p class="text-sm font-medium text-blue-800">Dr. Budi Santoso</p>
                <p class="text-xs text-gray-500">15 Mei 2023 Â· 10 menit membaca</p>
              </div>
            </div>
            <Button 
              text="Baca Selengkapnya" 
              href="/informasi/transformasi-digital" 
              variant="primary"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <SectionTitle
        title="Artikel Terbaru"
        subtitle="Berita dan artikel terbaru seputar program PPKO dan perkembangan Desa Purwobinangun"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {articles.map(article => (
          <Card
            title={article.title}
            description={article.description}
            image={article.image}
            href={`/informasi/${article.slug}`}
          />
        ))}
        
        <Card
          title="Kunjungan Industri ke Desa Purwobinangun"
          description="Beberapa industri besar mengunjungi Desa Purwobinangun untuk melihat potensi kerjasama."
          image="/placeholder.svg?height=400&width=600"
          href="#"
        />
        <Card
          title="Inovasi Produk Olahan Susu"
          description="Tim PPKO dan masyarakat desa mengembangkan beberapa inovasi produk olahan susu baru."
          image="/placeholder.svg?height=400&width=600"
          href="#"
        />
        <Card
          title="Peningkatan Kualitas Bahan Baku"
          description="Program peningkatan kualitas bahan baku susu melalui perbaikan manajemen peternakan."
          image="/placeholder.svg?height=400&width=600"
          href="#"
        />
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-blue-300 bg-white text-sm font-medium text-blue-500 hover:bg-blue-50">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-blue-300 bg-blue-600 text-sm font-medium text-white hover:bg-blue-700">
            1
          </a>
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-blue-300 bg-white text-sm font-medium text-blue-500 hover:bg-blue-50">
            2
          </a>
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-blue-300 bg-white text-sm font-medium text-blue-500 hover:bg-blue-50">
            3
          </a>
          <span class="relative inline-flex items-center px-4 py-2 border border-blue-300 bg-white text-sm font-medium text-gray-700">
            ...
          </span>
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-blue-300 bg-white text-sm font-medium text-blue-500 hover:bg-blue-50">
            8
          </a>
          <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-blue-300 bg-white text-sm font-medium text-blue-500 hover:bg-blue-50">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
        </nav>
      </div>
    </div>
  </section>

  <!-- Media Coverage -->
  <section class="py-16 bg-blue-50">
    <div class="container mx-auto px-4">
      <SectionTitle
        title="Liputan Media"
        subtitle="Program PPKO Desa Purwobinangun dalam sorotan media"
        centered={true}
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <img 
                src="/placeholder.svg?height=100&width=100" 
                alt="Logo Media" 
                class="h-8 mr-3"
              />
              <h3 class="text-lg font-semibold text-blue-800">Kompas</h3>
            </div>
            <p class="text-gray-700 mb-4">
              "Program PPKO Berhasil Tingkatkan Ekonomi Desa Melalui Olahan Susu"
            </p>
            <p class="text-sm text-gray-500 mb-4">12 April 2023</p>
            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
              Baca Artikel
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <img 
                src="/placeholder.svg?height=100&width=100" 
                alt="Logo Media" 
                class="h-8 mr-3"
              />
              <h3 class="text-lg font-semibold text-blue-800">Tempo</h3>
            </div>
            <p class="text-gray-700 mb-4">
              "Inovasi Factory Sharing, Solusi untuk UMKM Olahan Susu di Desa"
            </p>
            <p class="text-sm text-gray-500 mb-4">28 Maret 2023</p>
            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
              Baca Artikel
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <img 
                src="/placeholder.svg?height=100&width=100" 
                alt="Logo Media" 
                class="h-8 mr-3"
              />
              <h3 class="text-lg font-semibold text-blue-800">Detik</h3>
            </div>
            <p class="text-gray-700 mb-4">
              "Digitalisasi Bisnis Desa: Kisah Sukses Purwobinangun"
            </p>
            <p class="text-sm text-gray-500 mb-4">5 Mei 2023</p>
            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
              Baca Artikel
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-16 bg-gradient-to-r from-blue-700 to-green-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Dapatkan Informasi Terbaru</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto text-blue-100">
        Berlangganan newsletter kami untuk mendapatkan update terbaru tentang program PPKO dan perkembangan Desa Purwobinangun.
      </p>
      <div class="max-w-md mx-auto">
        <form class="flex flex-col sm:flex-row gap-3">
          <input 
            type="email" 
            placeholder="Alamat email Anda" 
            class="flex-grow px-4 py-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-300 text-gray-800"
            required
          />
          <button 
            type="submit" 
            class="bg-white text-blue-700 hover:bg-blue-50 px-6 py-3 rounded-md font-medium transition-colors"
          >
            Berlangganan
          </button>
        </form>
      </div>
    </div>
  </section>
</MainLayout>
